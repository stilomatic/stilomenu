package it.quidcom.menu.graphics{		import flash.display.MovieClip;	import flash.events.MouseEvent;	import it.quidcom.utils.ColorManager;		public class RoundedAssetButton extends MovieClip{				private var outColor:uint;		private var overColor:uint;		private var selection:Boolean;				public function RoundedAssetButton (_width:Number,stile:Object){			super();						outColor = stile.outColor;			overColor = stile.overColor;						body.width = _width; right.x = body.x+body.width+right.width;			//cacheAsBitmap = true;			ColorManager.setRGB(this,outColor);			}		public function get selected ():Boolean{			return selection;			}		public function set selected (value:Boolean):void{						selection = value;			var color:uint;			if(selection){				//alpha = .5;				color = overColor;				}else{				//alpha = 1;				color = outColor;				}			//trace("Background "+value+" : "+color);			ColorManager.setRGB(this,color);		}		}		}